{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
